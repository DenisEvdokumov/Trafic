            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.NewOrders" />
        <activity android:name=".activity.ActiveOrders" />
        <activity android:name=".activity.OrderDetails" />
        <activity android:name=".activity.WebViewActivity" />
        <activity android:name=".activity.MoneyActivity" />
        <activity android:name=".activity.ReferralsActivity" />
        <activity android:name=".activity.SignInActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
